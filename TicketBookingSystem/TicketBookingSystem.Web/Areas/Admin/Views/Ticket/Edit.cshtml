@model TicketBookingSystem.Web.Areas.Admin.Models.Tickets.EditTicketModel
@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>EditTicket</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Tickets/li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Edit Ticket</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Ticket"
                          asp-action="Edit" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="CustomerId" class="col-sm-2 col-form-label">Customer Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="CustomerId" id="customerid"
                                           placeholder="Customer Id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Destination" class="col-sm-2 col-form-label">Destination</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Destination" id="destination"
                                           placeholder="Destination">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="TicketFee" class="col-sm-2 col-form-label">Ticket Fee</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" asp-for="TicketFee" id="ticketfee"
                                           placeholder="Ticket Fee">
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Edit</button>
                            <a asp-controller="Ticket" asp-action="Index" class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


